msg segment_realloc {
    @type: 0x9;
    @subtype: 0x3;
    sel: u16;
    srcpid: pid;
    dstpid: pid;
    flags: u16 hex;
    padd_1: u16;
    addr: u32 hex;
    nbytes: u32 hex;

    reply {
        status: u16;
        sel: u16;
        flags: u16 hex;
        addr: u32 hex;
        nbytes: u32 hex;
    }
}

msg terminate {
    @type: 0x18;
    signum: u16;
    status: u32;
}