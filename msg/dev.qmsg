struct termios{
     iflag: u32;
     oflag: u32;
     cflag: u32;
     lflag: u32;
     c_line: u16;
     c_cc: term_cc;
     c_ispeed: i32;
     c_ospeed: i32;
}

msg tcgetattr {
     type: 0x310;
     request {
          fd: fd;
     }
     reply {
          status: i16;
          state: termios;
     }
}

msg tcsetattr {
     type: 0x311;
     request {
          fd: fd;
          state: termios;
          optional_actions: u16;
     }
     reply {
          status: i16;
     }
}

msg term_size {
     type: 0x0323;
     request {
          fd: fd;
          rows: u16;
          cols: u16;
     }
     reply {
          status: u16;
          oldrows: u16;
          oldcols: u16;
          
          padd: u32;
          padd: u32;
          padd: u32;
          padd: u32;
     }
}
